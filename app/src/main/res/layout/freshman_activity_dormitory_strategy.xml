<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.strategy.SameStrategyActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/freshman_bg_tb"
        app:navigationIcon="@drawable/freshman_icon_back">
        <TextView
            android:id="@+id/tb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/freshman_title_white"
            android:textSize="@dimen/dp_toolbar_text_size" />
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_dormitory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="#fff"
        app:tabSelectedTextColor="@color/freshman_btn_blue"
        app:tabTextColor="@color/freshmen_finish_black"
        android:textColor="@color/freshman_strategy_describe" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_dormitory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_dormitory"/>

</RelativeLayout>
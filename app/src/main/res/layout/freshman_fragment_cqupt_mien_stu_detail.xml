<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <com.mredrock.cyxbs.freshman.ui.widget.JCardView
        android:layout_marginTop="5dp"
        app:shadowColor="#DADADA"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/freshman_CyMien_detail_sv"
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_marginTop="14dp"
                    app:riv_corner_radius="6dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/freshman_CyMien_detail_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <TextView
                    android:id="@+id/freshman_CyMien_detail_name"
                    android:text="这是名字"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/freshman_CyMien_detail_desc"
                    android:text="这是内容"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/freshman_CyMien_detail_seeMore"
                    android:background="@drawable/freshman_icon_see_more"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </ScrollView>
    </com.mredrock.cyxbs.freshman.ui.widget.JCardView>
</FrameLayout>
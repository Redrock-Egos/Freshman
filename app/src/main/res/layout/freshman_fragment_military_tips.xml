<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <com.mredrock.cyxbs.freshman.ui.widget.JCardView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            app:backgroundColor="@color/bg_white"
            app:radius="5dp"
            app:shadowColor="@color/shadow_black"
            app:shadowRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/freshman_military_tips_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="标题"
                    android:textColor="#020203"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/freshman_military_tips_content"
                    android:text="我是内容"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:textColor="#020203"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.mredrock.cyxbs.freshman.ui.widget.JCardView>

</ScrollView>

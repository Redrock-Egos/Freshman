<?xml version="1.0" encoding="utf-8"?>
<com.mredrock.cyxbs.freshman.ui.widget.JCardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:radius="5dp"
    app:shadowRadius="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_data_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2017-2018学年第二学期挂科情况"
            android:textSize="15sp"
            android:textColor="#9954ACFF"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="13dp"
            android:drawableLeft="@drawable/freshman_icon_decorate"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/freshman_icon_decorate"
            android:layout_marginStart="13dp" />
        
        <com.mredrock.cyxbs.freshman.ui.widget.CircleProcessView
            android:id="@+id/cpv_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:circleNumber="2"
            app:colors="@array/colors"
            app:processes="@array/processes"/>

    </LinearLayout>

</com.mredrock.cyxbs.freshman.ui.widget.JCardView>
